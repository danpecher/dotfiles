# SSH Configuration
# Managed by chezmoi

# Global defaults
Host *
    AddKeysToAgent yes
    UseKeychain yes
    IdentityFile ~/.ssh/id_ed25519
    # Keep connections alive
    ServerAliveInterval 60
    ServerAliveCountMax 3

# GitHub
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519

# GitLab
Host gitlab.com
    HostName gitlab.com
    User git
    IdentityFile ~/.ssh/id_ed25519

# Bitbucket
Host bitbucket.org
    HostName bitbucket.org
    User git
    IdentityFile ~/.ssh/id_ed25519

# Example: Personal server
# Host myserver
#     HostName server.example.com
#     User username
#     Port 22
#     IdentityFile ~/.ssh/id_ed25519

# Example: Work server with jump host
# Host work-server
#     HostName internal.work.com
#     User workuser
#     ProxyJump jumphost.work.com
